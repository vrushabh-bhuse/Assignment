<!DOCTYPE html>
<html lang="en">
<head>
  <style>
    div{
      background-image:url('https://www.shutterstock.com/image-vector/cartoon-hand-drawn-shoes-seamless-pattern-682624165')
    }
  </style>
</head>
<body style="background-image: url('https://image.shutterstock.com/image-vector/cartoon-hand-drawn-shoes-seamless-260nw-682624165.jpg');" >
  <%- include('./partials/header.ejs') %>

  <!-- Home page for adding new products  -->
  <div >
    <div class="text-center center-div mt-5 mb-1" id="login" >
    <div class="container w-50 border py-5 mb-5"  style="background-color:slategrey ">
      <div class="title pb-5" >
        <h2 class="font-weight-bold">Fill Product the details</h2>
        <div id="error" class=""></div>
      </div>
      <form action="/addproduct" method="POST" id="addProdForm" class="pt-2 w-75 m-auto ">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Name" name="name" id="name" required />
        </div>
        <div class="form-group">
          <input type="number" class="form-control" placeholder="Price" name="price" id="price" required />
        </div>
        <div class="form-group">
          <input type="number" class="form-control" placeholder="Quantity" name="quantity" id="quantity" required />
        </div>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Description" name="description" id="description"
            required />
        </div>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Image Url" name="imgUrl" id="imgUrl" required />
        </div>
        <button type="submit" class="btn btn-success rounded-pill mt-2">Submit</button>
      </form>
      <script>
        const name = document.getElementById("name");
        const price = document.getElementById("price");
        const quantity = document.getElementById("quantity");
        const imgUrl = document.getElementById("imgUrl");
        const description = document.getElementById("description");

        const errorDiv = document.getElementById("error");
        const form = document.getElementById("addProdForm");

        form.addEventListener('submit', (e) => {
          let messages = []
          if (name.value === '' || name.value == null) {
            messages.push('Name is required')
          }
          if (price.value === '' || price.value == null) {
            messages.push('Price is required')
          }
          if (quantity.value <= 0 && price.value <= 0) {
            messages.push('Value should be greater than 0')
          }
          if (quantity.value === "" || quantity.value === null) {
            messages.push('Quantity is required')
          }
          if (description.value === "" || description.value === null) {
            messages.push('Description is required')
          }
          if (imgUrl.value === "" || imgUrl.value === null) {
            messages.push('Dont forget to add URL of product')
          }

          if (messages.length > 0) {
            e.preventDefault()
            errorDiv.innerText = messages.join(',\n ')
            errorDiv.classList = 'alert alert-danger'

          }
        })
      </script>
      </div>
 
      <%- include('./partials/footer') %>
</body>
</html>

