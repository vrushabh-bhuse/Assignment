<!DOCTYPE html>
<html lang="en">
<head>
    
</head>
<body style="background-color:aqua;">
    {{> navbar}}
 <div class="container p-5">

        <h2 class="display-6 text-center">Login Form</h2>

        <form method="post" action="/user/login">
            {{#if errPwdMsg}}
            <div class="alert alert-danger">{{errPwdMsg}}</div>
            {{/if}}

            {{#if succsMsg}}
            <div class="alert alert-success">{{succsMsg}}</div>
            {{/if}}

            {{#if errEmlMsg}}
            <div class="alert alert-danger">{{errEmlMsg}}</div>
            {{/if}}

            <div class="form-floating mb-3">
                <input type="email" name="emailId" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Email address</label>
            </div>

            <div class="form-floating mb-3">
                <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Password</label>
            </div>
            

            <div class="form-group mb-3">
                <input type="submit" value="SignIn" class="btn btn-success">
            </div>

        </form>
    </div>

{{> footer}}
</body>
</html>

