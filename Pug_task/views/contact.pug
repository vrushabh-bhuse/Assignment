          h5.display-4.font-weight-bold.font-italic
            | The World 
            br
            | Of Extreme Sports
          p.font-weight-bold.font-italic
            | SAVE 
            span.badge.border-sharp.badge-primary 20%
            |  ON ALL APPAREL
          hr.w-25.float-left.bg-white
          a.btn.btn-primary.border-sharp.btn-sm.float-left.shop-now-btn
            | Shop Now 
            span.bi.bi-arrow-right.mx-2
      .carousel-item
        img.d-block.w-100(src='media/slider2.jpg' alt='Second slide')
        .carousel-caption.d-none.d-md-block
          h5.display-4.font-weight-bold.text-left.font-italic
            | The World 
            br
            | Of Extreme Sports
          p.font-weight-bold.font-italic.text-left
            | SAVE 
            span.badge.border-sharp.badge-danger 20%
            |  ON ALL APPAREL
          hr.w-25.float-left.bg-white
          button.btn.border-sharp.btn-danger.btn-sm.float-left.shop-now-btn
            | Shop Now 
            span.bi.bi-arrow-right.mx-2
      .carousel-item
        img.d-block.w-100(src='media/slider3.jpg' alt='Third slide')
        .carousel-caption.d-none.d-md-block
          h5.display-4.font-weight-bold.text-left.font-italic
            | The World 
            br
            | Of Extreme Sports
          p.font-weight-bold.font-italic.text-left
            | SAVE 
            span.badge.border-sharp.badge-warning.text-white 20%
            |  ON ALL APPAREL
          hr.w-25.float-left.bg-white
          a.btn.btn-warning.text-white.btn-sm.float-left.shop-now-btn.border-sharp
            | Shop Now 
            span.bi.bi-arrow-right.mx-2
