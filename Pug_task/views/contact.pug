      </a>
  // Form
  section.border.my-5
    form(method='POST' action='/contactdata' ).container.p-5
      h1.mb-5.text-secondary Contact Us
      .form-row
        .form-group.col-md-6
          label(for='inputEmail4') First Name
          input#fname.form-control.border-sharp(type='text' name='fname' placeholder='First Name')
        .form-group.col-md-6
          label(for='inputPassword4') Last Name
          input#lname.form-control.border-sharp(type='text' name='lname' placeholder='Last Name')
      .form-group
        label(for='inputAddress') Email
        input#email.form-control.border-sharp(type='email' name='email' placeholder='Email Address')
      .form-group
        label(for='inputAddress2') Phone Number
        input#mobile.form-control.border-sharp(type='phone' name='phone' placeholder='Mobile Number')
      .form-group
        label(for='exampleFormControlTextarea1') Message
        textarea#message.form-control.border-sharp(rows='3')
      #error.alert.alert-danger.text-center.border-sharp(style='display: none;' role='alert')
      #success.alert.alert-success.text-center(style='display: none;' role='alert')
      input#submit.btn.btn-success.border-sharp(type='submit' value="Submit" onclick='validate()')
